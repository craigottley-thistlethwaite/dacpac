<Window x:Class="dacpac.util.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dacpac Utility" Height="350" Width="525">
    <Grid Name="MainGrid">
      
        <TreeView Margin="52,12,220,12" Name="SourceTreeView"></TreeView>
        <StackPanel Height="287" HorizontalAlignment="Left" Margin="16,12,0,0" Name="stackPanel1" VerticalAlignment="Top" Width="30">
            <Button Height="24" Width="24" Name="AddFileButton" ToolTip="Add a dacpac or bacpac file..." Click="AddFileButton_Click">
                <Button.Background>
                    <ImageBrush ImageSource="/dacpac.util;component/Resources/077_AddFile.ico" Stretch="Fill" TileMode="None" />
                </Button.Background>
            </Button>
            <Button Height="24" Width="24" Name="DeleteNodeButton" ToolTip="Delete a dacpac or bacpac file..." Click="DeleteNodeButton_Click">
                <Button.Background>
                    <ImageBrush ImageSource="/dacpac.util;component/Resources/delete.ico" />
                </Button.Background>
            </Button>
        </StackPanel>
    </Grid>
</Window>
